BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_temp
            text: '0'
            font_size: 48
            on_text: app.handle_conversion()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert C to F'
        on_press: app.handle_conversion()
    Label:
        id: output_temp
        font_size: 48
        text: '-32.000'
        color: (1, 1, 0, 1)